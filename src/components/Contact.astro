<section id="contact" class="section">
  <h2 class="section-title">Contact</h2>
  <div class="container">
    <div class="grid grid-cols-1 md:grid-cols-2 items-center w-full gap-16">
      <!-- Form -->
      <div class="text-left">
        <h2 class="text-5xl font-bold mb-4">Let's chat soon!</h2>
        <p class="mb-8">
          I'd love to hear your ideas! Let's chat about how we can work together to make your vision a reality.
        </p>

        <form class="contact-form space-y-2" id="contact-form" action="https://formspree.io/f/mdaaoqzo" method="POST">
          <input
            type="text"
            id="name"
            name="name"
            placeholder="Your full name"
            class="w-full p-3 border rounded-lg"
            required
      
          />

          <input
            type="email"
            id="email"
            name="email"
            placeholder="me@company.com"
            class="w-full p-3 border rounded-lg"
            required
          />

          <textarea
            id="message"
            name="message"
            rows="4"
            placeholder="Your message..."
            class="w-full p-3 border rounded-lg"
            required
          ></textarea>

          <button type="submit" class="secondary-btn w-full">
            Send me a Mesage
          </button>
        </form>
        <p id="form-status" class="mt-4 text-center font-semibold"></p>
      </div>

      <!-- Lottie Animation -->
      <div>
        <dotlottie-player
          src="https://lottie.host/f0502aa7-ce50-45d1-9a35-31ec6d37a66a/HtfqISa9LC.lottie"
          background="transparent"
          speed="1"
          style="width: 100%; height: 100%;"
          loop
          autoplay
        >
        </dotlottie-player>
      </div>
    </div>
  </div>

  <!-- Footer contact info -->
  <div class="absolute bottom-8 right-8 text-right text-sm space-y-2">
    <!-- Location -->
    <div class="flex items-center gap-2">
      <i class="fa-solid fa-location-dot text-[#e1725e]"></i>
      <p class="font-bold">Vancouver, BC, Canada</p>
    </div>
  
    <!-- Phone -->
    <div class="flex items-center gap-2 font-bold">
      <i class="fa-solid fa-phone text-[#e1725e]"></i>
      <a href="tel:+16047251561">+1 604-725-1561</a>
    </div>
  
    <!-- Email -->
    <div class="flex items-center gap-2 font-bold">
      <i class="fa-regular fa-envelope text-[#e1725e]"></i>
      <a href="mailto:hello@aniposada.com">hello@aniposada.com</a>
    </div>
  
    <!-- Copyright -->
    <div class="flex items-center gap-2 font-bold">
      <i class="fa-regular fa-copyright text-[#e1725e]"></i>
      <p>2025 AniDesignIt</p>
    </div>
  </div>
</section>



<script>
  // Telling TypeScript exactly what these elements are to avoid errors
  const form = document.getElementById("contact-form") as HTMLFormElement | null;
  const statusMessage = document.getElementById("form-status") as HTMLParagraphElement | null;

  if (form && statusMessage) {
    form.addEventListener("submit", async (e: Event) => {
      e.preventDefault();

      // Visual feedback for the user flow
      statusMessage.textContent = "Sending...";
      statusMessage.style.color = "gray";

      // We use the 'action' from the form tag above
      const formData = new FormData(form);

      try {
        const response = await fetch(form.action, {
          method: "POST",
          body: formData,
          headers: {
            'Accept': 'application/json'
          }
        });

        if (response.ok) {
          // Success state: Clear the form and inform the user
          statusMessage.textContent = "✅ Message sent successfully!";
          statusMessage.style.color = "green";
          form.reset();
        } else {
          // Error state: Handle Formspree specific errors
          const data = await response.json();
          statusMessage.textContent = data.errors 
            ? data.errors.map((error: any) => error.message).join(", ") 
            : "❌ Failed to send message.";
          statusMessage.style.color = "red";
        }
      } catch (err) {
        // Fallback for network issues
        console.error("Form error:", err);
        statusMessage.textContent = "⚠️ Something went wrong. Please try again later.";
        statusMessage.style.color = "red";
      }
    });
  }
</script>