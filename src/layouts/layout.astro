    {/* Use is:global to make sure these styles apply to all pages using this layout */}
    <style is:global>
        :root {
          --bg-color: #FFEBE5;
          --primary-color: #FF725E;
          --secondary-color: #3F4142;
          --title-font: 'Literata', serif;
          --paragraph-font: 'Open Sans', sans-serif;
        }
        
        /* 游댢 Reset y scroll */
        html, body {
          scroll-behavior: smooth;
          max-width: 100%;
          overflow-x: hidden; /* quitar scroll horizontal */
        }
        
        body {
          background-color: var(--bg-color);
          color: var(--secondary-color);
          font-family: var(--paragraph-font);
          overflow-y: hidden; /* en desktop */
        }
        
        /* Main container */
        .main-container {
          display: flex;
          width: max-content;
          height: 100vh;
          transition: transform 1s cubic-bezier(0.77, 0, 0.175, 1);
        }
        
        .section {
          width: 100vw;
          height: 100vh;
          display: flex;
          flex-direction: column;
          justify-content: center;
          align-items: center;
          padding: 2rem 0;
          position: relative;
          opacity: 0;
          transform: translateX(20px);
          transition: opacity 0.8s ease-out, transform 0.8s ease-out;
        }
        
        .container {
          width: 100%;
          max-width: 1200px;
          margin: 0 auto;
          padding: 0 2rem;
          position: relative;
        }
        
        .section.active {
          opacity: 1;
          transform: translateX(0);
        }
        
        h1, h2, h3 {
          font-family: var(--title-font);
          color: var(--secondary-color);
        }
        
        .primary-btn, .secondary-btn {
          padding: 1rem 2rem;
          border-radius: 9999px;
          font-weight: bold;
          transition: all 0.3s ease;
          cursor: pointer;
          border: 2px solid var(--primary-color);
          font-size: 1rem;
        }
        .primary-btn {
          background-color: transparent;
          color: var(--primary-color);
        }
        .primary-btn:hover {
          background-color: var(--primary-color);
          color: white;
        }
        .secondary-btn {
          background-color: var(--primary-color);
          color: white;
        }
        .secondary-btn:hover {
          background-color: transparent;
          color: var(--primary-color);
        }
        
        /* Header y logo */
        header {
          position: fixed;
          top: 0;
          left: 0;
          width: 100%;
          display: flex;
          justify-content: space-between;
          align-items: center;
          padding: 2rem 4rem;
          z-index: 100;
        }
        .logo {
          display: flex;
          align-items: center;
          max-width: 180px;
        }
        .logo svg {
          width: 100%;
          height: auto;
        }
        
        .desktop-nav {
          display: flex;
        }
        .desktop-nav a {
          margin-left: 2rem;
          font-weight: bold;
          cursor: pointer;
          transition: color 0.3s ease;
        }
        .desktop-nav a:hover, .desktop-nav a.active {
          color: var(--primary-color);
        }
        
        /* Redes sociales */
        .social-media {
          position: fixed;
          top: 140px;
          left: 4rem;
          display: flex;
          flex-direction: column;
          gap: 1rem;
          z-index: 100;
        }
        .social-media a {
          transition: transform 0.3s ease;
        }
        .social-media a:hover {
          transform: scale(1.2);
        }
        
        /* T칤tulos de secci칩n */
        .section-title {
          position: absolute;
          bottom: 1rem;
          left: 2rem;
          font-size: 4.5rem;
          font-family: var(--title-font);
          color: var(--secondary-color);
          opacity: 0.1;
          z-index: -1;
          text-transform: uppercase;
        }
        
        /* Grids */
        .work-grid {
          display: grid;
          grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
          gap: 2rem;
          width: 100%;
        }
        .services-grid {
          display: grid;
          grid-template-columns: repeat(3, 1fr);
          gap: 2rem;
          width: 100%;
        }
        .service-item {
          text-align: left;
          opacity: 0;
          transform: translateY(30px);
          transition: opacity 0.6s ease-out, transform 0.6s ease-out;
        }
        .service-item.is-visible {
          opacity: 1;
          transform: translateY(0);
        }
        .service-item .service-title {
          display: flex;
          align-items: center;
          gap: 0.75rem;
          margin-bottom: 0.5rem;
        }
        .service-item .service-title h3 {
          font-size: 20px;
          font-weight: bold;
        }
        
        /* About */
        .about-content {
          display: flex;
          align-items: center;
          gap: 4rem;
          width: 100%;
        }
        .about-photo-container {
          position: relative;
          width: 280px;
          height: 280px;
          flex-shrink: 0;
        }
        .about-photo-container img {
          width: 100%;
          height: 100%;
          object-fit: cover;
          position: relative;
          z-index: 2;
        }
        .about-photo-container dotlottie-player {
          position: absolute;
          top: 50%;
          left: 50%;
          width: 160%;
          height: 160%;
          transform: translate(-50%, -50%);
          z-index: 1;
        }
        
        /* Contacto */
        .contact-form {
          width: 100%;
          max-width: 600px;
        }
        .contact-form input, .contact-form textarea {
          width: 100%;
          padding: 1rem;
          margin-bottom: 1rem;
          border: 2px solid var(--secondary-color);
          border-radius: 0.5rem;
          background-color: transparent;
        }
        .contact-form input::placeholder, .contact-form textarea::placeholder {
          color: var(--secondary-color);
          opacity: 0.7;
        }
        
        /* Mobile menu hidden by default */
        .hamburger-btn, .mobile-nav {
          display: none;
        }
        
        /* ====== MEDIA QUERIES ====== */
        
        /* Tablets */
        @media (max-width: 1024px) {
          .services-grid {
            grid-template-columns: repeat(2, 1fr);
          }
          .work-grid {
            grid-template-columns: 1fr;
          }
        }
        
        /* Mobile */
        @media (max-width: 768px) {
          body {
            overflow-y: auto;
            overflow-x: hidden;
          }
          .main-container {
            width: 100%;
            height: auto;
            flex-direction: column;
            transform: none !important;
            max-width: 100%;
            overflow-x: hidden;
          }
          .section {
            width: 100%;
            height: auto;
            min-height: 100vh;
            padding: 8rem 1.5rem 4rem 1.5rem;
            opacity: 1 !important;
            transform: none !important;
            box-sizing: border-box;
          }
          .container {
            max-width: 100%;
            padding: 0 1.5rem;
          }
          header {
            padding: 1rem 1.5rem;
            background-color: rgba(255, 235, 229, 0.9);
            backdrop-filter: blur(5px);
          }
          .logo {
            max-width: 140px;
          }
          .desktop-nav { display: none; }
          .hamburger-btn {
            display: block;
            background: none;
            border: none;
            cursor: pointer;
          }
          .mobile-nav {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            gap: 2rem;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100vh;
            background-color: var(--bg-color);
            z-index: 1000;
            transform: translateX(100%);
            transition: transform 0.3s ease-in-out;
          }
          .mobile-nav.open { transform: translateX(0); }
          .mobile-nav a {
            font-size: 2rem;
            font-family: var(--title-font);
            color: var(--secondary-color);
          }
          .mobile-nav .close-btn {
            position: absolute;
            top: 2rem;
            right: 2rem;
            background: none;
            border: none;
            cursor: pointer;
          }
          .social-media {
            top: auto;
            bottom: 1rem;
            left: 50%;
            transform: translateX(-50%);
            flex-direction: row;
            gap: 1.5rem;
            background: rgba(255, 235, 229, 0.9);
            padding: 0.5rem 1rem;
            border-radius: 99px;
          }
          .section-title {
            position: relative;
            width: 100%;
            text-align: center;
            font-size: 2rem;
            margin-bottom: 2rem;
            opacity: 0.1;
          }
          .grid {
            grid-template-columns: 1fr !important;
            text-align: center;
          }
          #index .grid > div:first-child,
          #contact .grid > div:first-child {
            order: 2;
            text-align: center;
          }
          #index .grid > div:last-child,
          #contact .grid > div:last-child {
            order: 1;
            margin-bottom: 2rem;
          }
          .work-grid, .services-grid {
            grid-template-columns: 1fr;
          }
          .about-content {
            flex-direction: column;
            text-align: center;
          }
          .contact-form { margin: 0 auto; }
          .absolute.bottom-10.right-10 { display: none; }
          #contact .absolute {
            position: relative;
            bottom: auto;
            right: auto;
            text-align: center;
            margin-top: 3rem;
          }
        
          /* 游댢 Botones en mobile apilados */
          .flex.gap-4 {
            flex-direction: column;
            gap: 1rem;
            width: 100%;
          }
          .flex.gap-4 a {
            width: 100%;
            text-align: center;
          }
        }
        
        /* <= 740px */
        @media (max-width: 740px) {
          header { padding: 0.75rem 1rem; }
          .logo { max-width: 120px; }
        }
        
        /* <= 400px */
        @media (max-width: 400px) {
          .logo { max-width: 100px; }
          .primary-btn, .secondary-btn {
            padding: 0.75rem 1.25rem;
            font-size: 0.9rem;
          }
        }
        
        /* 游댢 Fix para Services en mobile */
        @media (max-width: 768px) {
          .services-grid {
            grid-template-columns: 1fr !important;
            gap: 1.5rem;
          }
          .service-item {
            opacity: 1 !important;
            transform: none !important;
          }
        }

     
          
        /* 游댢 Fix para centrar .section-title en mobile */
            @media (max-width: 768px) {
            .section-title {
                position: relative;   /* ya no absoluto */
                bottom: auto;
                left: auto;
                text-align: center;
                width: 100%;
                font-size: 2.5rem;   /* tama침o m치s legible en mobile */
                margin: 0 auto 2rem auto;
                z-index: 1;          /* que no quede atr치s */
                opacity: 0.2;        /* un poquito m치s visible */
            }
            }
        </style>
