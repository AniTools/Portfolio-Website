    <script>
   document.addEventListener('DOMContentLoaded', () => {
    const mainContainer = document.querySelector('.main-container');
    const sections = document.querySelectorAll('.section');
    const navLinks = document.querySelectorAll('nav a');
    const mobileNav = document.querySelector('.mobile-nav');
    const hamburgerBtn = document.querySelector('.hamburger-btn');
    const closeBtn = document.querySelector('.close-btn');
    const mobileNavLinks = document.querySelectorAll('.mobile-nav a');
    const workSection = document.querySelector('#my-work');

    // 游녢 Nuevo: leer ?section= de la URL
    const urlParams = new URLSearchParams(window.location.search);
    let currentSection = parseInt(urlParams.get("section") ?? "0") || 0;

    let isScrolling = false;
    let isMobile = window.innerWidth <= 768;
    let canScroll = true;

    if (workSection) {
        workSection.addEventListener('mouseenter', () => { canScroll = false; });
        workSection.addEventListener('mouseleave', () => { canScroll = true; });
    }

    function openMobileMenu() { if (mobileNav) mobileNav.classList.add('open'); }
    function closeMobileMenu() { if (mobileNav) mobileNav.classList.remove('open'); }

    if (hamburgerBtn) {
        hamburgerBtn.addEventListener('click', openMobileMenu);
    }
    if (closeBtn) {
        closeBtn.addEventListener('click', closeMobileMenu);
    }
    mobileNavLinks.forEach(link => link.addEventListener('click', closeMobileMenu));

    function setupEventListeners() {
        isMobile = window.innerWidth <= 768;
        window.removeEventListener('wheel', handleWheel);
        window.removeEventListener('keydown', handleKeydown);
        window.removeEventListener('scroll', updateActiveNavOnScroll);
        document.querySelectorAll('.desktop-nav a').forEach(link => link.removeEventListener('click', handleNavClick));
        document.querySelectorAll('.mobile-nav a').forEach(link => link.removeEventListener('click', handleMobileNavClick));

        if (isMobile) {
            document.body.style.overflowY = 'auto';
            if (mainContainer) (mainContainer as HTMLElement).style.transform = '';
            document.querySelectorAll('.mobile-nav a').forEach(link => link.addEventListener('click', handleMobileNavClick));
            window.addEventListener('scroll', updateActiveNavOnScroll);
            updateActiveNavOnScroll();
        } else {
            document.body.style.overflowY = 'hidden';
            navigateToSection(currentSection, false);
            window.addEventListener('wheel', handleWheel, { passive: false });
            window.addEventListener('keydown', handleKeydown);
            document.querySelectorAll('.desktop-nav a').forEach(link => link.addEventListener('click', handleNavClick));
            updateActiveState(currentSection);
        }

        const exploreBtn = document.querySelector('.primary-btn'); 
        if (exploreBtn) {
            exploreBtn.addEventListener('click', (e) => {
                e.preventDefault();
                navigateToSection(1);
            });
        }
    }

    function updateActiveNavOnScroll() {
        let currentSectionIndex = 0;
        sections.forEach((section, index) => {
            const sectionTop = (section as HTMLElement).offsetTop;
            const sectionHeight = (section as HTMLElement).clientHeight;
            if (window.scrollY >= sectionTop - sectionHeight / 2) {
                currentSectionIndex = index;
            }
        });
        updateActiveState(currentSectionIndex);
    }

    function updateActiveState(sectionIndex: number) {
        currentSection = sectionIndex;
        document.querySelectorAll('.desktop-nav a').forEach((link, index) => {
            link.classList.toggle('active', index === sectionIndex);
        });
        document.querySelectorAll('.mobile-nav a').forEach((link, index) => {
            link.classList.toggle('active', index === sectionIndex);
        });
        if (!isMobile) {
            sections.forEach((section, index) => {
                section.classList.toggle('active', index === sectionIndex);
            });
        }
    }

    function navigateToSection(sectionIndex: number, animate = true) {
        if (isMobile || sectionIndex < 0 || sectionIndex >= sections.length) return;
        
        currentSection = sectionIndex;
        const offset = -currentSection * 100;
        if (mainContainer) {
            (mainContainer as HTMLElement).style.transition = animate ? 'transform 1s cubic-bezier(0.77, 0, 0.175, 1)' : 'none';
            (mainContainer as HTMLElement).style.transform = `translateX(${offset}vw)`;
        }
        updateActiveState(currentSection);

        if (sections[sectionIndex].id === 'services') {
            const serviceItems = document.querySelectorAll('.service-item');
            serviceItems.forEach((item, index) => {
                setTimeout(() => {
                    item.classList.add('is-visible');
                }, index * 100);
            });
        }
    }

    function handleMobileNavClick(e: Event) {
        e.preventDefault();
        const target = e.currentTarget as HTMLAnchorElement;
        const targetId = target.getAttribute('href');
        if (targetId) {
            document.querySelector(targetId)?.scrollIntoView({ behavior: 'smooth' });
        }
    }

    function handleNavClick(e: Event) {
        e.preventDefault();
        const sectionIndex = parseInt((e.currentTarget as HTMLElement).getAttribute('data-section')!);
        navigateToSection(sectionIndex);
    }

    function handleWheel(event: WheelEvent) {
        if (isScrolling || !canScroll) return;
        event.preventDefault();
        isScrolling = true;
        if (event.deltaY > 0) {
            navigateToSection(currentSection + 1);
        } else {
            navigateToSection(currentSection - 1);
        }
        setTimeout(() => { isScrolling = false; }, 1500);
    }
    
    function handleKeydown(event: KeyboardEvent) {
        if (event.key === 'ArrowRight') navigateToSection(currentSection + 1);
        else if (event.key === 'ArrowLeft') navigateToSection(currentSection - 1);
    }
    
    setupEventListeners();
    window.addEventListener('resize', setupEventListeners);
});

